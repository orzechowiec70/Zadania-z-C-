#include <iostream>
using namespace std;
int main ()

{
	setlocale (LC_ALL,"");
	float a,b,c;
	cout<<"Podaj długości boków"<<endl;
	cin>>a>>b>>c;
	if ((a>0) && (b>0) && (c>0) && (a<b+c) && (b<a+c) && (c<b+a))
	{
		cout<<"Da się utworzyć trójkąt"<<endl;
	}
	else
		cout<<"Nie da się utworzyć trójkąta"<<endl;
	system ("PAUSE");
	return 0;
}
