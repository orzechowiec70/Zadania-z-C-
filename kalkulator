#include <iostream>
using namespace std;
int main ()
{
	setlocale (LC_ALL,"");
	float a, b, c;
	int wybor;
	cout<<"Podaj liczby"<<endl;
	cin>>a>>b;
	cout<<"Co zrobić z liczbami?"<<endl;
	cout<<"Dodać? Wciśnij 1"<<endl;
	cout<<"Odjąć? Wciśnij 2"<<endl;
	cout<<"Pomnożyć? Wciśnij 3"<<endl;
	cout<<"Podzielić? Wciśnij 4"<<endl;
	cin>>wybor;
	switch (wybor)
	{
		case 1:
		{
			c=a+b;
			cout<<"Suma wynosi "<<c<<endl;
			break;
		}
		case 2:
		{
			c=a-b;
			cout<<"Różnica wynosi "<<c<<endl;
			break;
		}
		case 3:
		{
			c=a*b;
			cout<<"Iloczyn wynosi "<<c<<endl;
			break;
		}
		case 4:
		{
			if (b>0)
			{
			c=a/b;
			cout<<"Iloraz wynosi "<<c<<endl;
			break;
			}
			else cout<<"Nie da się podzielić przez 0"<<endl;
		}
			
			
	}
	system ("PAUSE");
	return 0;
	
	
	
	
}
